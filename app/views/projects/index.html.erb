<div class='page-header'>
  <h1>Gallery</h1>
</div>
<div class="project-info">Space filler.</div>
<div class='row'>
  <% @projects.each do |project| %>

    <div class='project-tile col-xs-6 col-sm-4 col-md-3 no-gutters' >
      <div class='project-title'>
        <h4><%= project.title.try(:titleize) %></h4>
        <p><%= project.published_at.to_date %></p>
        <p>
          <%= link_to "See More >", project_path(project), remote: true %>
        </p>
      </div>

      <%= image_tag project.pictures.first.image.url(:medium), class: 'img-responsive' %>
    </div>
  <% end %>

  <%= link_to 'New Project', new_project_path %>
</div>


